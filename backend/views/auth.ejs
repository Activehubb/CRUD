<%- include("layout/header") %>

<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <section class="position-relative pt-20 pb-28">
          <div class="flex">
            <div class="col-md-6 bg-white p-8">
              <form
                action="/api/v1/signup"
                method="post"
                enctype="multipart/form-data"
                id="sign up"
              >
                <div class="row">
                  <h1 class="text-dark text-center py-4 text-lead">
                    Are you a first time user?
                  </h1>
                  <div class="col-12 d-flex">
                    <div class="col-4 profile_center">
                      <img
                        src="/assets/ic-profile.png"
                        class="profile"
                        alt="profile"
                      />
                      <label for="profile" class="btnc btnc-secondary"
                        >Upload</label
                      >
                      <input type="file" name="image" id="profile"  />
                    </div>
                    <!-- <div class="col-4 profile_center">
                      <img
                    src={URL.createObjectURL(media)}
                    alt=""
                    className="mt-4"
                  />
                      <label for="profile" class="btnc btnc-secondary"
                        >Upload</label
                      >
                      <input type="file" name="profile" id="profile" hidden />
                    </div> -->

                    <div class="col-8 pl-4">
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="text"
                            name="fname"
                            placeholder="First name"
                            aria-required="true"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="text"
                            name="lname"
                            placeholder="Last name"
                            aria-required="true"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="email"
                            name="email"
                            placeholder="Email address"
                            aria-required="true"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="password"
                            name="password"
                            placeholder="Password"
                            aria-required="true"
                            required
                          />
                        </div>
                      </div>
                      <div class="btnc-position">
                        <input
                          type="submit"
                          value="Sign Up"
                          class="btnc btnc-primary my-2"
                          aria-required="true"
                          required
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-6 bg-white p-8 position-relative">
              <form action="/signin" method="post" id="sign in">
                <div class="row">
                  <h1 class="text-dark text-center mt-10 mb-10 pb-4 text-lead">
                    Do you already have an account?
                  </h1>
                  <div class="col-12">
                    <div class="col-12">
                      <div class="my-4 px-16">
                        <input
                          aria-required="true"
                          class="text-dark px-2 py-2 w-100 form-input"
                          type="email"
                          placeholder="Email address"
                          required
                        />
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="my-4 px-16">
                        <input
                          required
                          aria-required="true"
                          class="text-dark px-2 py-2 w-100 form-input"
                          type="password"
                          placeholder="Password"
                        />
                      </div>
                    </div>

                    <div class="btnc-position px-16 py-8">
                      <input
                        type="submit"
                        value="Sign In"
                        class="btnc btnc-primary"
                      />
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<%- include("layout/footer") %>
