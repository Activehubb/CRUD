<%- include("layout/header") %>

<div class="main main-height">
  <% if (message) { %>
  <div class="box">
    <div class="m_wrapper">
      <div class="wrapper_modal">
        <div class="wrapper_modal-dialog">
          <div class="wrapper_modal-content">
            <div class="wrapper_modal-body"><%= message.message %></div>
            <a
              href="/article/<%= message.id %> "
              class="btnc btnc-danger modal_btn"
              >Back</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <% } %>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 m-auto">
        <div class="py-6">
          <div class="m-auto">
            <div class="py-2 my-2 overflow-hidden">
              <div class="container">
                <div class="row">
                  <div class="col-4 profile_justify">
                    <img
                      src="/<%= article.user.image %>"
                      class="avatar"
                      alt="profile"
                    />
                    <h3 class="mt-4"><%= article.fname + article.lname %></h3>
                  </div>
                  <div class="col-md-8">
                    <div class="my-4">
                      <h3 class="text-dark px-2 py-2">
                        <%= article.headLine %>>
                      </h3>
                    </div>
                    <div class="my-4">
                      <h3 class="text-dark px-2 py-2"><%= article.subHead%></h3>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="py-2 my-2 overflow-hidden">
              <div class="container">
                <div class="row">
                  <div class="col-md-12">
                    <textarea
                      class="form-control"
                      rows="12"
                      id="comment"
                      name="comment"
                    >
                    <%= article.content%>
                    </textarea>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("layout/footer") %>
